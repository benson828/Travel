@model Travel.Models.Entity.Attraction
<div class="row">
    <h1 class="col-md-9">新增景點</h1>
    <div class="col-md-3 position-relative">
        <button class="btn btn-primary position-absolute bottom-0 end-0 me-3 mb-1">
            <a class="link-underline-opacity-0 link-light" asp-controller="Admin" asp-action="Index"><i class="bi bi-box-arrow-left me-1"></i>返回</a>
        </button>
    </div>
    <hr />
</div>
<div class="container">
    <form method="post">
        <div class="mt-3">
            <label class="form-label">景點名稱</label>
            <input type="text" class="form-control" asp-for="Name"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">地點</label>
            <input type="text" class="form-control" asp-for="Place" /> 
        </div>
        <div class="mt-3">
            <label class="form-label">描述</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">類型</label>
            <input type="text" class="form-control" asp-for="Type" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-danger">
                <a class="link-underline-opacity-0 link-light" asp-controller="Admin" asp-action="Index">Cancel</a>
            </button>
        </div>
    </form>
</div>