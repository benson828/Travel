@model List<JourneyAttractionViewModel>

@for (int i = Model.Count - 1; i >= 0; i--)
{
    var journey = Model[i].Journey;
    var attraction = Model[i].Attraction;

    <div class="d-flex align-items-center justify-content-center p-2 h1">
        <div class="travelCard rounded-5 shadow-lg" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <div class="p-5">
                <div class="d-flex align-items-center justify-content-center mx-5">
                    <div class="rounded-circle bg-body-secondary p-3">
                        <i class="bi bi-house"></i>
                    </div>
                    <span class="bg-body-secondary" style="width: 100px;height: 7px;"></span>
                    <div class="rounded-circle bg-body-secondary p-3">
                        <i class="bi bi-camera"></i>
                    </div>
                    <span class="bg-body-secondary" style="width: 100px;height: 7px;"></span>
                    <div class="rounded-circle bg-body-secondary p-3">
                        <i class="bi bi-cup-hot"></i>
                    </div>
                    <span class="bg-body-secondary" style="width: 100px;height: 7px;"></span>
                    <div class="rounded-circle bg-body-secondary p-3">
                        <i class="bi bi-camera"></i>
                    </div>
                    <span class="bg-body-secondary" style="width: 100px;height: 7px;"></span>
                    <div class="rounded-circle bg-body-secondary p-3">
                        <i class="bi bi-house"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- 標籤紙 -->
        <div class="bg-warning-subtle w-25 h-100% shadow-lg text-center">
            <h3 class="fw-bold text-center">@journey.place</h3>
            <p class="h4">@journey.start_date-@journey.end_date</p>
        </div>
    </div>
    <!-- 重複 -->
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <button type="button" class="btn-close text-center position-absolute end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                @foreach(var attr in attraction)
                {
                    <div class="modal-header">
                        <h1 class="modal-title fw-bold" id="exampleModalToggleLabel">
                            <span class="badge text-bg-dark rounded-pill">@attr.Name</span>
                        </h1>
                    </div>
                    <div class="modal-body">
                        <h4 class="fw-bold">@attr.Description</h4>
                    </div>
                }
                <div class="modal-footer">
                    <button class="btn bg-success btn-lg text-light p-2" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">確認預約</button>
                </div>
            </div>
        </div>
    </div>

    <!-- second Modal -->
    <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border border-success border-5 p-3">
                <div class="modal-body reserveModel">
                    <div class="row p-1 mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control form-control-lg bg-secondary-subtle" autocomplete="username" aria-required="true" placeholder="預約人姓名" />
                        </div>
                        <div class="col-6 col-md-8">
                            <input type="text" class="form-control form-control-lg bg-secondary-subtle" autocomplete="username" aria-required="true" placeholder="身分證" />
                        </div>
                    </div>
                    <div class="row p-1 mb-3">
                        <div class="col-md-12">
                            <input type="email" class="form-control form-control-lg bg-secondary-subtle" autocomplete="username" aria-required="true" placeholder="電子信箱" />
                        </div>
                    </div>
                    <div class="row p-1 mb-3">
                        <div class="col-md-12">
                            <input type="text" class="form-control form-control-lg bg-dark-subtle" placeholder="日期:2023/1/1" disabled>
                        </div>
                    </div>
                    <div class="row p-1 mb-3">
                        <div class="col-md-12">
                            <textarea class="form-control bg-secondary-subtle" placeholder="人員資訊"></textarea>
                        </div>
                    </div>
                    <div class="row p-1 mb-3">
                        <div class="col-md-9">
                            <input type="text" class="form-control form-control-lg bg-secondary-subtle pb-5" autocomplete="username" aria-required="true" placeholder="備註" />
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-success btn-lg p-4 text-lg text-center w-100">送出</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
